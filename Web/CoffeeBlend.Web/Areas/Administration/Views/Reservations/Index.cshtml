@model CoffeeBlend.Web.ViewModels.ReservationViewModel.ReservationInListViewModel

@{
    ViewData["Title"] = "Reservations";
}

<section class="ftco-menu mb-5 pb-5 text-center text-white">
    <h1>Reservations</h1>
    <p>
        <a class="btn btn-primary" asp-controller="Reservations" asp-action="Create">Create New</a>
        <a class="btn btn-primary" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Back to Admin Panel</a>
    </p>
    <table class="table table-bordered table-striped text-white">
        <thead>
            @foreach (var item in Model.Reservations.Take(1))
            {
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => item.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.ReservationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.Message)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.IsDeleted)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.DeletedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => item.ModifiedOn)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            }
        </thead>
        <tbody>
            @foreach (var item in Model.Reservations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeletedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
