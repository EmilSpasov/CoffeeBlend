@model CoffeeBlend.Web.ViewModels.CategoriesViewModel.CreateCategoryInputModel
@{
    this.ViewData["Title"] = "Add Category";
}

<section class="ftco-menu mb-5 pb-5 text-center">
    <h1 class="text-center">@this.ViewData["Title"]</h1>

    <form asp-area="Administration" method="post" class="text-center col-3 offset-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Add Category" />
    </form>
</section>
<div>
    <a asp-area="Administration" asp-action="Index">Back to List</a>
</div>