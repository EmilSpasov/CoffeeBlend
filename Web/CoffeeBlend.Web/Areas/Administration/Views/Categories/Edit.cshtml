@model CoffeeBlend.Web.ViewModels.CategoriesViewModel.AdministrationCategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="ftco-menu mb-5 pb-5 text-center text-white">
    <h4 class="text-center col-3 offset-4">Category</h4>
    <hr />
    <div class="row">
        <div class="text-center col-4 offset-4">
            <form class="text-center" asp-area="Administration" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsDeleted"/> @Html.DisplayNameFor(model => model.IsDeleted)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="DeletedOn" class="control-label"></label>
                    <input asp-for="DeletedOn" class="form-control" placeholder="2020-11-25"/>
                    <span asp-validation-for="DeletedOn" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" placeholder="2020-11-25"/>
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ModifiedOn" class="control-label"></label>
                    <input asp-for="ModifiedOn" class="form-control" placeholder="2020-11-25"/>
                    <span asp-validation-for="ModifiedOn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div >
        <a asp-area="Administration" asp-action="Index">Back to List</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
