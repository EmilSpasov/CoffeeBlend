@model CoffeeBlend.Web.ViewModels.ProductsViewModels.CreateProductInputModel
@{
    this.ViewData["Title"] = "Add Product";
    var categoryItems =
        this.Model.CategoriesItems
            .Select(x => new SelectListItem(x.Value, x.Key));
}
<section class="ftco-menu mb-5 pb-5 text-center">
    <h1 class="text-center col-3 offset-4">Product</h1>

    <form method="post" class="text-center col-3 offset-4" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageFile"></label>
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryProductId"></label>
            <select asp-for="CategoryProductId" class="form-control" asp-items="categoryItems"></select>
            <span asp-validation-for="CategoryProductId" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Add Product" />
    </form>
</section>
<div class="text-center col-3 offset-4">
    <a asp-action="Index">Back to List</a>
</div>