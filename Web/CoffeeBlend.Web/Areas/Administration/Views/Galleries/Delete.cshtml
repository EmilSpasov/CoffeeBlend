@model CoffeeBlend.Web.ViewModels.GalleryViewModel.GalleryViewModel

@{
    ViewData["Title"] = "Delete";
}

<section class="ftco-menu mb-5 pb-5 text-center text-white">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="text-center col-3 offset-4">
        <h4 class="text-center col-3 offset-4">Photo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeletedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeletedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedOn)
            </dd>
        </dl>

        <form class="text-center col-3 offset-4" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</section>