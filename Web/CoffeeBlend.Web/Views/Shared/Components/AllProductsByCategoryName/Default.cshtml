@model CoffeeBlend.Web.ViewModels.MenuViewModel.ProductsInListViewModel

@foreach (var product in Model.Products)
{
    <div class="col-md-12 d-flex align-items-center">
        <div class="tab-content ftco-animate">
            <div class="tab-pane fade show active" role="tabpanel">
                <div class="row">
                    <div class="col-md-8">
                        <div class="menu-entry">
                            <a asp-action="Index" asp-route-id="@product.Id"><img class="block-20" src="@product.ImageUrl" alt="" /></a>
                            <div class="text text-center pt-4">
                                <h3><a href="product-single.html">@product.Name</a></h3>
                                <p>@product.Description</p>
                                <p class="price"><span>$@product.Price</span></p>
                                <p><a href="/products/details" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}