@model CoffeeBlend.Web.ViewModels.MenuViewModel.ProductsListViewModel

<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-4 text-center">
            <div class="menu-entry">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"><img class="block-20" src="@product.ImageUrl" alt="" /></a>
                <div class="text text-center pt-4">
                    <h3><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></h3>
                    <p>@product.Description</p>
                    <p class="price"><span>$@product.Price</span></p>
                    <p><a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-outline-primary">Add to Cart</a></p>
                </div>
            </div>
        </div>
    }
</div>